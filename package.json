{
  "name": "beefy-proto",
  "version": "0.5.0",
  "private": true,
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@openzeppelin-2/contracts": "npm:@openzeppelin/contracts@2.5.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@uniswap/lib": "^4.0.1-alpha",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "^1.0.0",
    "bignumber.js": "^9.0.1",
    "blockchain-addressbook": "^0.1.53",
    "ganache-cli": "^6.12.2",
    "keccak": "^3.0.1",
    "rlp": "^2.2.6"
  },
  "scripts": {
    "flat-hardhat": "hardhat flatten contracts/BIFI/strategies/Common/StrategyCommonRewardPoolLP.sol > tmp/flattened.sol",
    "flat": "bin/flatten.sh",
    "clean": "rm -r artifacts cache",
    "net:bsc": "ganache-cli --fork ${BSC_RPC} --account=\"${DEPLOYER_PK}, 1000000000000000000000000\" --account=\"${KEEPER_PK}, 1000000000000000000000000\" --account=\"${UPGRADER_PK}, 1000000000000000000000000\"",
    "net:heco": "ganache-cli --fork ${HECO_RPC} --account=\"${DEPLOYER_PK}, 1000000000000000000000000\" --account=\"${KEEPER_PK}, 1000000000000000000000000\" --account=\"${UPGRADER_PK}, 1000000000000000000000000\"",
    "net:avax": "ganache-cli --fork ${AVAX_RPC} --account=\"${DEPLOYER_PK}, 1000000000000000000000000\" --account=\"${KEEPER_PK}, 1000000000000000000000000\"--account=\"${UPGRADER_PK}, 1000000000000000000000000\"",
    "net:polygon": "ganache-cli --fork ${POLYGON_RPC} --account=\"${DEPLOYER_PK}, 1000000000000000000000000\" --account=\"${KEEPER_PK}, 1000000000000000000000000\" --account=\"${UPGRADER_PK}, 1000000000000000000000000\"",
    "net:fantom": "ganache-cli --fork ${FANTOM_RPC} --account=\"${DEPLOYER_PK}, 1000000000000000000000000\"  --account=\"${KEEPER_PK}, 1000000000000000000000000\" --account=\"${UPGRADER_PK}, 1000000000000000000000000\"",
    "compile": "hardhat compile",
    "all": "yarn clean && yarn compile && yarn net",
    "test": "hardhat test --network localhost",
    "test:vault": "hardhat test --network localhost test/prod/VaultLifecycle.test.js",
    "deploy-strat:bsc": "hardhat run --network bsc scripts/deploy-strat-with-pool.js",
    "deploy-strat:lendhub": "hardhat run --network heco scripts/deploy-strat-lendhub.js",
    "deploy-strat:polygon": "hardhat run --network polygon scripts/deploy-strat-with-pool.js",
    "deploy-pool:bsc": "hardhat run --network bsc scripts/deploy-launchpad-pool.js",
    "notify:bsc": "hardhat run --network bsc scripts/notify-launchpools.js"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.31",
    "hardhat": "^2.4.0",
    "mocha": "^8.2.1",
    "truffle-flattener": "^1.5.0",
    "web3": "^1.3.0"
  }
}
